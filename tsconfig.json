{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./built",
        "allowJs": true,
        "allowUnreachableCode": true,
        "lib": ["es2016", "dom"],
        "target": "es6",
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
      "src",
      "test",
      "transform.ts",
      "stopify.ts",
      "demo-webpage",
      "benchmarks"
    ],
    "exclude": [
      "demo-webpage/html",
      "test/should-run",
      "built"
    ]
}
